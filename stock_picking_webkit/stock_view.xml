<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">
        <record id="view_picking_form_report" model="ir.ui.view">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/header//button[@name='action_cancel']" position="after">
                    <button name="%(webkit_report_picking_list_out)d" string="Print Delivery Order"
                    class="oe_highlight" groups="stock.group_stock_user" type="action"
                    attrs="{'invisible': ['|',('picking_type_code', '!=','outgoing'),('state', 'in', ['draft','cancel'])]}"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
